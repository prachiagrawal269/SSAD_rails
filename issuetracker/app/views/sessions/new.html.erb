<h1>
Sign In 
</h1>

<% if flash[:error] %>
<p> <%= flash[:error] %> 
</p>

<% end %>

<%= form_for(:session , :url => sessions_path ) do |f| %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
